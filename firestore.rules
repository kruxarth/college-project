rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(uid) {
      return isSignedIn() && request.auth.uid == uid;
    }

    // Users: Public read for statistics, write only by owner
    match /users/{userId} {
      allow read: if true; // Public read for statistics and user lookups
      allow write: if isOwner(userId);
    }

    // Donations: Public read, authenticated write
    match /donations/{donationId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn();
    }

    // Notifications: Users can only read/modify their own, but anyone can create for anyone
    match /notifications/{notificationId} {
      // Read existing notifications (only owner can read their notifications)
      allow read: if isSignedIn() && request.auth.uid == resource.data.userId;
      
      // Create new notification (any authenticated user can notify any other user)
      // This allows donors to notify NGOs and vice versa
      allow create: if isSignedIn() && request.resource.data.userId is string;
      
      // Update/delete existing notification (only owner can modify)
      allow update, delete: if isSignedIn() && request.auth.uid == resource.data.userId;
    }

    // Status History: Authenticated users only
    match /statusHistory/{statusId} {
      allow read, write: if isSignedIn();
    }
  }
}
